{
  "name": "PixelSorterProject",
  "export": {
    "container": "mp4",
    "codec": "h264",
    "pixel_format": "yuv420p"
  },
  "compositions": [
    {
      "name": "My Pixel Sorted Composition",
      "width": 1280,
      "height": 720,
      "background_color": { "r": 0, "g": 0, "b": 0, "a": 255 },
      "color_profile": "srgb",
      "fps": 30,
      "duration": 60.0,
      "tracks": [
        {
          "name": "Image Track",
          "entities": [
            {
              "type": "image",
              "start_time": 0.0,
              "end_time": 2.0,
              "fps": 30.0,
              "properties": {
                "file_path": {
                  "type": "constant",
                  "properties": { "value": "test_data/test.jpg" }
                },
                "position": {
                  "type": "constant",
                  "properties": { "value": { "x": 0.0, "y": 0.0 } }
                },
                "scale": {
                  "type": "constant",
                  "properties": { "value": { "x": 0.5, "y": 0.5 } }
                },
                "anchor": {
                  "type": "constant",
                  "properties": { "value": { "x": 0.0, "y": 0.0 } }
                },
                "rotation": {
                  "type": "constant",
                  "properties": { "value": 0.0 }
                }
              },
              "effects": [
                {
                  "type": "pixel_sorter",
                  "properties": {
                    "threshold": {
                      "type": "keyframe",
                      "properties": {
                        "keyframes": [
                          { "time": 0.0, "value": 0.1, "easing": "Linear" },
                          { "time": 0.2, "value": 0.9, "easing": "Linear" },
                          { "time": 0.4, "value": 0.2, "easing": "Linear" },
                          { "time": 0.6, "value": 0.8, "easing": "Linear" },
                          { "time": 0.8, "value": 0.1, "easing": "Linear" },
                          { "time": 1.0, "value": 0.9, "easing": "Linear" },
                          { "time": 1.2, "value": 0.2, "easing": "Linear" },
                          { "time": 1.4, "value": 0.8, "easing": "Linear" },
                          { "time": 1.6, "value": 0.1, "easing": "Linear" },
                          { "time": 1.8, "value": 0.9, "easing": "Linear" },
                          { "time": 2.0, "value": 0.1, "easing": "Linear" }
                        ]
                      }
                    },
                    "direction": {
                      "type": "keyframe",
                      "properties": {
                        "keyframes": [
                          { "time": 0.0, "value": "vertical", "easing": "Linear" },
                          { "time": 0.5, "value": "horizontal", "easing": "Linear" },
                          { "time": 1.0, "value": "vertical", "easing": "Linear" },
                          { "time": 1.5, "value": "horizontal", "easing": "Linear" },
                          { "time": 2.0, "value": "vertical", "easing": "Linear" }
                        ]
                      }
                    },
                    "sort_criteria": { "type": "constant", "properties": { "value": "red" } }
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}